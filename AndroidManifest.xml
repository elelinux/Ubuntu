<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pluto="http://www.w3.org/2001/pluto.html"
    package="com.tmobile.theme.Ubuntu"
    android:versionCode="1"
    android:versionName="1.0.2.4"
    android:installLocation="internalOnly"
    android:hasCode="false">
    <uses-sdk android:minSdkVersion="13" />

    <!-- Make sure this theme APK only shows up on appropriate devices. -->
   <uses-feature android:name="com.tmobile.software.themes" /> 

    <application android:label="@string/theme_name"
        android:icon="@drawable/icon"/>

    <activity 
        android:label="@string/theme_name"
        android:name="com.tmobile.theme.Foo" />
                 
    <theme
        pluto:themeId="Ubuntu"
        pluto:styleId="@style/Ubuntu"
        pluto:name="@string/theme_name"
        pluto:preview="@drawable/preview"
        pluto:author="@string/author"
        pluto:copyright="@string/copyright"
        pluto:wallpaperImage="@drawable/homescreen"
        pluto:styleName="@string/style_appearance_name"
        pluto:alarmName="Light" 
        pluto:alarmFileName="media/audio/alarms/Light.mp3" 
        pluto:ringtoneName="Old_Phone" 
        pluto:ringtoneFileName="media/audio/ringtones/Old_Phone.mp3" 
        pluto:notificationRingtoneName="Teleport" 
        pluto:notificationRingtoneFileName="media/audio/notifications/Teleport.mp3">

        <!-- Currently this is not being read, but instead the redirections are
             inferred from the convention res/xml/<package_name>.xml. -->
    <!--    <meta-data android:name="com.tmobile.theme.redirections"
            android:resource="@xml/redirections" /> -->

    </theme>

</manifest>
